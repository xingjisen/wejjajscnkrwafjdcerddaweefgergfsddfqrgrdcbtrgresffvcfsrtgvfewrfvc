page {
  background-color: white;
}
.x_body {
  width: 90%;
  height: auto;
  margin: 0 auto;
  margin-top: 0.625rem;
}
.x_body .x_title {
  width: 100%;
  height: 12.5rem;
  text-align: center;
  font-weight: bold;
  line-height: 12.5rem;
  font-size: 1.8rem;
}
.x_body .x_hint {
  margin: 0.3125rem 0 0 0.625rem;
  font-size: 0.8rem;
  visibility: hidden;
}
.x_body .x_hint_color {
  visibility: visible;
  color: red;
}
.x_body .x_check {
  display: flex;
  margin: 0.3125rem 0 3.125rem 0;
  font-size: 0.8rem;
}
.x_body .x_check view text {
  color: #96bdf3;
}
.x_body .x_password {
  margin-top: 1.25rem;
  font-size: 0.9rem;
  color: #333333;
  width: 100%;
  text-align: center;
}

