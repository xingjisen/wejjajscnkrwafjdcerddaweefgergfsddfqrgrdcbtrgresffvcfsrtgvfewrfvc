.x_body {
  width: 90%;
  height: auto;
  background-color: white;
  border-radius: 0.625rem;
  margin: 1.25rem auto 0;
  padding: 0 0 0.625rem 0;
  box-shadow: 0 0.03125rem 0.3125rem #464646;
}
.x_body .x_title {
  width: 90%;
  height: auto;
  margin: 0 auto;
  font-weight: bold;
  text-align: center;
  font-size: 1.1rem;
  padding: 0.625rem 0;
  border-bottom: 0.0625rem solid #666666;
}
.x_body .x_added_title {
  width: 90%;
  height: auto;
  margin: 0.3125rem auto 0.625rem;
  font-size: 0.9rem;
  color: #666666;
}
.x_body .x_setp {
  width: 90%;
  height: auto;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.x_body .x_setp > view {
  width: 25%;
  text-align: center;
  font-size: 0.8rem;
}
.x_body .x_setp > view:nth-child(1) {
  color: #5babff;
}
.x_body .x_patient_information {
  width: 90%;
  height: auto;
  margin: 0 auto;
  padding: 0 0 0.625rem 0;
  border-bottom: 0.0625rem solid #666666;
}
.x_body .x_patient_information .x_patient_title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 1.25rem 0;
}
.x_body .x_patient_information .x_patient_title view:nth-child(2) {
  color: #5babff;
}
.x_body .x_patient_information .x_patient_body {
  width: 100%;
  height: auto;
  margin: 0 auto;
  font-size: 0.9rem;
  background-color: #F5F8FB;
  border-radius: 0.3125rem;
  padding: 0.3125rem 0;
}
.x_body .x_patient_information .x_patient_body > view {
  margin: 0.625rem;
  display: flex;
  justify-content: space-between;
}
.x_body .x_upload_case {
  width: 90%;
  height: auto;
  margin: 0.625rem auto;
}
.x_body .x_upload_case .x_upload_msg {
  font-size: 0.9rem;
}
.x_body .x_upload_case .x_upload_msg text {
  font-weight: bold;
}
.x_body .x_upload_case .x_upload {
  margin: 0.625rem 0;
}
.x_body .x_upload_case .x_button {
  width: 80%;
  margin: 0 auto;
}
.x_body .x_upload_case .x_user_agreement {
  display: flex;
  margin: 0.625rem 0;
}
.x_body .x_upload_case .x_user_agreement .x_fwgz_color {
  font-size: 0.8rem;
}
.x_body .x_upload_case .x_user_agreement .x_fwgz_color text {
  color: #5babff;
}

