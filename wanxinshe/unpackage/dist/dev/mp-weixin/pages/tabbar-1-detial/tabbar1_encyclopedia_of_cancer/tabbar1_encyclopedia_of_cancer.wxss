.x_navBarBox {
  background-color: #fff;
}
.x_navBarBox .x_navBar {
  background-color: white;
}
.x_navBarBox .x_navBar .x_main_heading {
  margin: 0 auto;
  color: black;
}
.x_body {
  width: 90%;
  margin: 0 auto;
}
.x_body .x_list_s {
  margin: 0.625rem 0;
}
.x_body .x_list_s .x_list_data {
  border-bottom: 0.0625rem solid #eeeeee;
}
.x_body .x_list_s .x_list_data > view:nth-child(1) {
  font-size: 0.8rem;
  color: #666666;
  margin: 0.625rem 0;
}
.x_body .x_list_s .x_list_data .x_list_data1 {
  margin: 0.625rem 0;
  font-weight: bold;
}
.x_body .x_list_index {
  height: 85%;
  width: 1.875rem;
  border-radius: 3.125rem;
  font-size: 0.9rem;
  color: #333333;
  background-color: #eeeeee;
  text-align: center;
  position: fixed;
  top: 12%;
  right: 0.625rem;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.x_body .x_list_index .x_bgc {
  border-radius: 0.625rem;
}
.x_body .x_list_index .x_bgc_activate {
  background-color: #5babff;
}

