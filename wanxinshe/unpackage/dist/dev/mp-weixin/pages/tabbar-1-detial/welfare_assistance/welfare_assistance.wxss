.x_body {
  width: 100vw;
  height: 1670px;
  background-image: url("https://wanton-001.obs.cn-east-3.myhuaweicloud.com/WanXinWebMini/index/detail/gyjz.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center top;
  position: relative;
}
.x_body .x_boxs {
  width: 100%;
  height: 65.5%;
  position: absolute;
  top: 27%;
}
.x_body .x_boxs .x_box {
  width: 80%;
  height: 90px;
  margin: 0 auto;
  margin-top: 20px;
  background-color: #FFF7EC;
  border-radius: 8px;
  position: relative;
}
.x_body .x_boxs .x_box view:nth-child(1) {
  font-size: 0.8rem;
  margin-left: 10px;
}
.x_body .x_boxs .x_box view:nth-child(1) text {
  width: 100px;
  padding: 3px;
  display: inline-block;
  margin: 10px 5px 0 0;
  text-align: center;
  background-color: #FB9028;
  color: white;
  font-size: 0.9rem;
  border-radius: 5px;
}
.x_body .x_boxs .x_box view:nth-child(2) {
  position: absolute;
  width: 80px;
  height: 20px;
  border-radius: 10px;
  color: white;
  font-size: 0.9rem;
  text-align: center;
  bottom: 5px;
  right: 10px;
  background: linear-gradient(to top, #EF7026, #F59048);
}

